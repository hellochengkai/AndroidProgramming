<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/crime_view_pager"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
            <ImageButton
                android:id="@+id/jump_to_first"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="@string/jump_to_first"
                app:srcCompat="@android:drawable/ic_media_rew" />
            <Button
                android:id="@+id/crime_save"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="@string/save_crime"
                android:textSize="16sp" />
            <ImageButton
                android:id="@+id/jump_to_last"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/jump_to_last"
                app:srcCompat="@android:drawable/ic_media_ff" />
    </RelativeLayout>

</LinearLayout>
